<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    android:background="@drawable/bg_card2"
    android:elevation="1dp"
    android:layout_marginHorizontal="2dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:textStyle="bold"
        android:textSize="10sp"
        android:background="@drawable/badge_green"
        android:paddingHorizontal="20dp"
        android:paddingVertical="3dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtInvoice"
        android:layout_below="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVOICE: 19278910391"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_below="@+id/txtInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bayar: Rp 39.000"
        android:textSize="12sp"
        android:layout_marginTop="5sp"
        android:textColor="@color/gray_dark" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 September 2022"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/gray"/>

</RelativeLayout>